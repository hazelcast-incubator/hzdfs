  <inceptionYear>2013</inceptionYear>
  <organization>
    <name>RapidPM</name>
    <url>http://www.rapidpm.org</url>
  </organization>
  <url>http://www.hzdfs.org/</url>
  <name>RapidPM Hazelcast Distributed Filesystem</name>
  <description>A distributed FileSystem, based on a Hazelcast-Cluster.</description>

  <scm>
    <url>https://github.com/hazelcast-incubator/hzdfs</url>
    <connection>scm:git:https://github.com/hazelcast-incubator/hzdfs.git</connection>
    <developerConnection>scm:git:https://github.com/hazelcast-incubator/hzdfs.git</developerConnection>
  </scm>
  <developers>
    <developer>
      <name>Sven Ruppert</name>
      <email>sven.ruppert@gmail.com</email>
      <roles>
        <role>Developer</role>
      </roles>
      <timezone>+1</timezone>
    </developer>
  </developers>
